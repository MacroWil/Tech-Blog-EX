{{!-- This is where users can see other peoples posts on the homepage --}}
<div class="card">
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <p class="card-text">{{description}}</p>
    <p class="card-text text-muted text-end byTag">
      {{user.name}}
      on
      {{format_date date_created}}</p>
      <button type="button" class="btn btn-light">See Post with Comments</button>
  </div>
</div>
{{!-- Triggers drop down of comments with input field and submit to button leave a comment --}}