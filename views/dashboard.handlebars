{{!-- These are the cards where a user sees their previous posts in their dashbaord  --}}
<div class="content">
    <div class="text-center">
    <button type="button" id="createPostBtn" class="btn btn-outline-secondary"><a href="/api/dashboard/create">Create a new post!</a></button>
    </div>
    {{#if blogPosts.length}}
    {{#each blogPosts as |blogPost|}}
    {{> dashboardCard blogPost}}
    {{/each}}
    {{else}}
        <p>You haven't created any blog posts yet. <a href="/api/dashboard/create">Create a new one!</a></p>
    {{/if}}
</div>
