<div class="card">
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <p class="card-text">{{description}}</p>
    <p class="card-text text-muted text-end byTag">
      {{user.name}}
      on
      {{format_date date_created}}</p>
  </div>
  <div class="text-center">
    <h3>Comments</h3>
    {{#each comments as |comment|}}
      <div>
        <p>{{comment.comment_body}}
          by
          {{comment.user.name}}
          on
          {{format_date comment.date_created}}</p>
      </div>
    {{/each}}
  </div>
</div>
{{> commentInput }}
<script src="/js/newComment.js"></script>